{
  "name": "root",
  "private": true,
  "engines": {
    "pnpm": ">= 9"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.1",
    "only-allow": "^1.2.1",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint"
    ],
    "**/*": [
      "prettier --check"
    ]
  }
}
