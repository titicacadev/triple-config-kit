{
  "name": "@titicaca/eslint-config-triple",
  "version": "2.4.0",
  "description": "Triple's ESLint config, following our styleguide",
  "main": "index.js",
  "files": [
    "recommends",
    "rules",
    "index.js",
    "prettierrc.js",
    "stylelint.js",
    "typescript.js"
  ],
  "scripts": {
    "lint:es": "eslint './recommends/**/*.js' './rules/**/*.js'",
    "lint:es:fix": "npm run lint:es -- --fix",
    "prettier": "prettier '**/*.{json,yaml,md}' --check",
    "prettier:fix": "prettier '**/*.{json,yaml,md}' --write",
    "lint": "npm run lint:es; npm run prettier",
    "lint:fix": "npm run lint:es:fix; npm run prettier:fix",
    "update-snapshot": "jest -u",
    "test:watch": "jest --watch",
    "test": "jest",
    "prepare": "[ $PREPARE_HUSKY_DISABLED ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/titicacadev/eslint-config-triple.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "triple",
    "javascript",
    "typescript",
    "styleguide",
    "es2015",
    "es2016",
    "es2017",
    "es2018"
  ],
  "author": "Triple Corp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/titicacadev/eslint-config-triple/issues"
  },
  "homepage": "https://github.com/titicacadev/eslint-config-triple",
  "engines": {
    "node": ">= 6"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^4.0.1",
    "prettier": "2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "devDependencies": {
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint"
    ],
    "**/*.{json,yaml,md}": [
      "prettier --check"
    ]
  }
}
